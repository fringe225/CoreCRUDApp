@page
@model BookListRazor.Pages.BookList.IndexModel
@{
}


<br />

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Create Book</a>
    </div>

</div>

<div class="col-12 border p-3 mt-3">
    <form method="post">
        @if (Model.Books.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                       @*Prefered to use that over HTML helper. But HTML Helper still there for some functionality*@
                        <label asp-for="Books.FirstOrDefault().Name">

                        </label>
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(m=>m.Books.FirstOrDefault().Author)*@
                        <label asp-for="Books.FirstOrDefault().Author">
                              
                        </label>
                    </th>
                      <th>
                        @*@Html.DisplayNameFor(m=>m.Books.FirstOrDefault().Author)*@
                        <label>
                           Options
                        </label>
                    </th>
                </tr>
                @foreach(var item in Model.Books)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m=>item.Name)
                        </td>
                        <td>    
                            @Html.DisplayFor(m=>item.Author)
                        </td>
                        <td>
                            <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="confirm("Wanna Delete?")" class="btn btn-danger btn-sm">Delete</button>
                            <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
           <p class="lead"> No Book Availiable</p> 
        }
    </form>
</div>